<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
	<TextView 
	    android:id="@+id/group_member_list_item_account"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:textSize="20sp"
	    android:textColor="#000"
	    android:text="adfad"
	    />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:id="@+id/group_member_list_item_pushable_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="16sp"
            android:text="sdads"
            />
        <Button 
            android:id="@+id/group_member_list_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        
        <Button 
            android:id="@+id/group_member_list_item_pushable_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pushable_btn"
            android:layout_toLeftOf="@id/group_member_list_out_button"
            android:layout_marginRight="10dp"
            />
        
    </RelativeLayout>

</LinearLayout>
